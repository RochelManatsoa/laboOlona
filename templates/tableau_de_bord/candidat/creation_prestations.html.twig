{% extends 'tableau_de_bord/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}

    <div class="loader-container" id="loader-container" style="display:none;">
        <span class="loader"></span>
    </div>

    <section class="">
        <div class="breadcrumb-card mb-25 d-md-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <a href="javascript:history.back()" class="d-block btn btn-info fw-semibold text-uppercase me-3 btn_retour">
                <i class="mx-2 bi bi-arrow-left"></i>Retour</a>
                <h5 class="mb-0"> Prestations </h5>
            </div>
            <ol class="breadcrumb list-unstyled mt-0 mb-0 pl-0">
                <li class="breadcrumb-item position-relative">
                    <a routerlink="v2/candidate/dashboard/" class="d-inline-block position-relative" href="v2/candidate/dashboard/">
                    <i class="ri-home-8-line"></i> Tableau de bord </a> 
                </li>
                <li class="breadcrumb-item position-relative"> Cr√©er une prestations </li>
            </ol>
        </div>
    </section>
    <section class="detail_db d-md-flex bp_ form_compte_">
        <div class="biographie-profil mb-4 p-4">
            {{ form_start(form, {'attr': {'data-turbo': 'false'}}) }}
            {{ form_row(form.titre)}}
            <div class="row">
                <div class="col-lg-6 col-sm-12">
                {{ form_row(form.secteurs)}}
                </div>
                <div class="col-lg-6 col-sm-12">
                {{ form_row(form.modalitesPrestation)}}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-4">{{ form_row(form.tarifPrestation.montant) }}</div>
                <div class="col-sm-12 col-md-4">{{ form_row(form.tarifPrestation.typeTarif) }}</div>
                <div class="col-sm-12 col-md-4">{{ form_row(form.tarifPrestation.currency) }}</div>
            </div>
            {{ form_row(form.description)}}
            {{ form_row(form.competences)}}
            {{ form_row(form.availability)}}
            {{ form_row(form.conditionsParticulieres)}}
            {{ form_row(form.preferencesCommunication)}}
            {{ form_row(form.engagementQualite)}}
            {{ form_row(form.motsCles)}}
            <div class="row">
                <div class="col-lg-6 col-sm-12">
                {{ form_row(form.contactTelephone)}}
                </div>
                <div class="col-lg-6 col-sm-12">
                {{ form_row(form.contactEmail)}}
                </div>
            </div>
            {{ form_row(form.file)}}
            <div style="display:none;">
            {{ form_widget(form) }}
            </div>
            <hr/>
            <button type="submit" class="btn btn-primary px-5 rounded-pill btn-lg">Sauvegarder</button>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}