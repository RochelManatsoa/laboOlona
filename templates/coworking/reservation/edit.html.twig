{% extends 'base_coworking.html.twig' %}

{% block title %}Modifier une réservation{% endblock %}

{% block paralax %}{% endblock %}

{% block admin %}
  {% if is_granted('ROLE_ADMIN') %}
    {{ parent() }}
  {% endif %}
{% endblock %}

{% block body %}
<section class="p-0 m-0">
    <div class="container my-5">
        <div class="row p-5 align-items-center rounded-3 border shadow-lg">
            <h1 class="h3">Modifier une réservation en ligne</h1>

            {{ include('coworking/reservation/_form.html.twig', {'button_label': 'Modifier'}) }}
            <div class="d-flex justify-content-end w-100">
                <a class="btn btn-primary px-5 rounded-pill" href="{{ path('app_coworking_reservation_index') }}"><i class="bi me-2 bi-arrow-left"></i>Retour à la liste</a>
                {{ include('coworking/reservation/_delete_form.html.twig') }}
            </div>
            
        </div>
    </div>
</section>
{% endblock %}
