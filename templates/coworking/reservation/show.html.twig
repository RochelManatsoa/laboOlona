{% extends 'base_coworking.html.twig' %}

{% block title %}Réservation #{{ reservation.id }}{% endblock %}

{% block paralax %}{% endblock %}

{% block admin %}
  {% if is_granted('ROLE_ADMIN') %}
    {{ parent() }}
  {% endif %}
{% endblock %}

{% block body %}
<section class="p-0 m-0">
    <div class="container my-5">
        <div class="row p-5 align-items-center rounded-3 border shadow-lg">
            <h1 class="h3">Reservation #{{ reservation.id}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Nom complet</th>
                <td>{{ reservation.fullName }}</td>
            </tr>
            <tr>
                <th>Nombre de place</th>
                <td>{{ reservation.guest }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reservation.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ reservation.phone }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reservation.date ? reservation.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Créée</th>
                <td>{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mis à jour</th>
                <td>{{ reservation.updatedAt ? reservation.updatedAt|date('Y-m-d H:i:s') : 'Non' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ reservation.status }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reservation.description|raw }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-end w-100">
        <a class="btn btn-secondary px-5 rounded-pill" href="{{ path('app_coworking_reservation_edit', {'id': reservation.id}) }}"><i class="bi me-2 bi-pencil"></i>Modifier</a>
        {{ include('coworking/reservation/_delete_form.html.twig') }}
    </div>
    <div>
        <a class="btn btn-primary my-3 px-5 rounded-pill" href="{{ path('app_coworking_reservation_index') }}"><i class="bi me-2 bi-arrow-left"></i>Retour à la liste</a>
    </div>

{% endblock %}
