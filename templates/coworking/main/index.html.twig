                <div id="reservationForm">
                    <!-- Form -->
                    {{ form_start(form) }}
                    <div class="row gx-3">
                        <div class="col-md-6">        
                        <!-- Full name -->
                        <div class="mb-3">
                            {{ form_widget(form.fullName, {'attr': {'placeholder': 'Nom complet'}}) }}
                        </div>
        
                        <!-- Phone number -->
                        <div class="mb-3">
                            {{ form_widget(form.phone, {'attr': {'placeholder': 'Téléphone'}}) }}
                        </div>
        
