                        <div class="mb-3">
                            {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
                        </div>
                        </div>
                        <div class="col-md-6">
                        <!-- Guests -->
                        <div class="mb-3">
                            {{ form_widget(form.guest, {'attr': {'placeholder': '2 personnes'}}) }}
                        </div>
        
                        <!-- Date -->
                        <div class="mb-3">
                            {{ form_widget(form.date.date, {'attr': {'placeholder': 'Date'}}) }}
                        </div>
        
