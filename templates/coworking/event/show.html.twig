{% extends 'base_coworking.html.twig' %}

{% block title %}Evénement{% endblock %}

{% block body %}
    <h1 class="h3">Événement #{{ event.id }}</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Utilisateur</th>
                <td>{{ event.user ? event.user.email : 'Non défini' }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Début</th>
                <td>{{ event.startEvent ? event.startEvent|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ event.endEvent ? event.endEvent|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Journée</th>
                <td>{{ event.allDay ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>
                    {% for place in event.places %}
                        <div class="badge bg-info">{{ place.name }}</div>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Créée le</th>
                <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mis à jour</th>
                <td>{{ event.updatedAt ? event.updatedAt|date('Y-m-d H:i:s') : '-' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-end w-100">
        <a class="btn btn-secondary px-5 rounded-pill" href="{{ path('app_event_edit', {'id': event.id}) }}"><i class="bi me-2 bi-pencil"></i>Modifier</a>
        {{ include('coworking/event/_delete_form.html.twig') }}
    </div>

    <div>
        <a class="btn btn-primary my-3 px-5 rounded-pill" href="{{ path('app_event_index') }}"><i class="bi me-2 bi-arrow-left"></i>Retour à la liste</a>
    </div>


{% endblock %}
