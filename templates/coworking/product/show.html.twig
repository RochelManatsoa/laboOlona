{% extends 'base_coworking.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1 class="h3">{{ product.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Stock disponible</th>
                <td>{{ product.stock }}</td>
            </tr>
            <tr>
                <th>Mis à jour</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if product.imageName %}
                        <img src="{{ asset('images/products/' ~ product.imageName) }}" alt="{{ product.name }}" class="img-thumbnail" style="width: 100px;"/>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-end w-100">
        <a class="btn btn-secondary px-5 rounded-pill" href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>
        {{ include('coworking/product/_delete_form.html.twig') }}
    </div>

    <div>
        <a class="btn btn-primary my-3 px-5 rounded-pill" href="{{ path('app_product_index') }}">Retour à la liste</a>
    </div>
{% endblock %}
