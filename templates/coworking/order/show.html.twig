{% extends 'base_coworking.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1 class="h3">Commande #{{ order.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Créée le</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Utilisateur</th>
                <td>{{ order.customer }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ order.totalAmount }} {{ order.currency.symbole }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>
                    {{ statusOrder(order)|raw }}
                </td>
            </tr>
            <tr>
                <th>Items</th>
                <td>{{ order.orderItems|length }}</td>
            </tr>
            <tr>
                <th>Mis à jour le</th>
                <td>{{ order.updatedAt ? order.updatedAt|date('Y-m-d H:i:s') : '-' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-end w-100">
        <a class="btn btn-secondary px-5 rounded-pill" href="{{ path('app_order_edit', {'id': order.id}) }}"><i class="bi me-2 bi-pencil"></i>Modifier</a>
        {{ include('coworking/order/_delete_form.html.twig') }}
    </div>

    <div>
        <a class="btn btn-primary my-3 px-5 rounded-pill" href="{{ path('app_order_index') }}"><i class="bi me-2 bi-arrow-left"></i>Retour à la liste</a>
    </div>

{% endblock %}
