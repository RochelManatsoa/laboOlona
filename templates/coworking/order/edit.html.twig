{% extends 'base_coworking.html.twig' %}

{% block title %}Modifier une commande{% endblock %}

{% block paralax %}{% endblock %}

{% block admin %}
  {% if is_granted('ROLE_ADMIN') %}
    {{ parent() }}
  {% endif %}
{% endblock %}

{% block body %}
{% if not is_granted('ROLE_ADMIN') %}
<header class="header-home">
    <div class="page-content">
        <div class="home-banner-section header-home-user bg-cover" style="background-image:url({{ asset('v2/images/coworking-olona-talents.webp')}})">
            <div class="home-inner-section">
                <div class="mid-section">
                    <div id="liveDateTime" data-initial-date="{{ 'now'|date('Y-m-d H:i:s') }}"></div>
                    <h1 class="title-large">Modifier une  commande</h1>
                </div>
            </div>
        </div>
    </div>
</header>
{% endif %}
<section class="p-0 m-0">
    <div class="container my-5">
        <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
          <div class="col-9"> 
          {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
              <h1 class="h3">Modifier la commande #{{ order.id }}</h1>
          {% endif %}

            {{ include('coworking/order/_form.html.twig', {'button_label': 'Modifier'}) }}
            <div class="d-flex justify-content-end w-100 my-5">
                <a class="btn btn-info px-5 rounded-pill" href="{{ path('app_order_index') }}"><i class="bi me-2 bi-arrow-left"></i>Retour Ã  la liste</a>
                {{ include('coworking/order/_delete_form.html.twig') }}
            </div>
          </div>
          <div class="col-3">
          </div>         
        </div>
    </div>
</section>
{% endblock %}
