{% extends 'base_coworking.html.twig' %}

{% block title %}Détail de l'invitation{% endblock %}

{% block paralax %}{% endblock %}

{% block body %}
<section class="p-0 m-0">
    <div class="container my-5">
        <div class="row p-5 align-items-center rounded-3 border shadow-lg">
            <h1 class="h3">Détail de la invitation</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ invitation.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ invitation.email }}</td>
                    </tr>
                    <tr>
                        <th>Uuid</th>
                        <td>{{ invitation.uuid }}</td>
                    </tr>
                    <tr>
                        <th>CreatedAt</th>
                        <td>{{ invitation.createdAt ? invitation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>UsedAt</th>
                        <td>{{ invitation.usedAt ? invitation.usedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ invitation.status }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-end w-100">
                <a class="btn btn-secondary px-5 rounded-pill" href="{{ path('app_moderateur_invitation_edit', {'id': invitation.id}) }}"><i class="bi me-2 bi-pencil"></i>Modifier</a>
                {{ include('coworking/invitation/_delete_form.html.twig') }}
            </div>

            <div>
                <a class="btn btn-primary my-3 px-5 rounded-pill" href="{{ path('app_moderateur_invitation_index') }}"><i class="bi me-2 bi-arrow-left"></i>Retour à la liste</a>
            </div>
        </div>
    </div>
</section>
{% endblock %}


