{% extends 'base_coworking.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1 class="h3">Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Dépenses</th>
                <td></td>
            </tr>
            <tr>
                <th>Réservations</th>
                <td>{{ user.events|length }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-end w-100">
        <a class="btn btn-secondary px-5 rounded-pill" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
        {{ include('coworking/user/_delete_form.html.twig') }}
    </div>

    <div>
        <a class="btn btn-primary my-3 px-5 rounded-pill" href="{{ path('app_user_index') }}">Retour à la liste</a>
    </div>
{% endblock %}
