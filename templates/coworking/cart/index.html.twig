{% extends 'base_coworking.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block paralax %}
    {% if not is_granted('ROLE_ADMIN') %}
        {% include "coworking/cart/_paralax.html.twig" %}
    {% endif %}
{% endblock %}

{% block admin %}
    {% if is_granted('ROLE_ADMIN') %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block body %}
<section class="p-0 m-0">
    <div class="container my-5">
        <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">

            {% if items is empty %}
            <div class="text-center col-lg-6 col-sm-12 mx-auto">
                <p class="text-center my-5 h5">Votre panier est vide.</p>
                <img src="{{ asset('images/empty.png')}}" class="img-fluid">
            </div>
            {% else %}
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th class="text-center">Quantit√©</th>
                            <th class="text-center">Prix</th>
                            <th class="text-center">Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr>
                                <td>{{ item.product.name }}</td>
                                <td class="text-center">{{ item.quantity }}</td>
                                <td class="text-center">{{ item.product.price }} Ar</td>
                                <td class="text-center">{{ item.product.price * item.quantity }} Ar</td>
                                <td>
                                    <a class="btn btn-sm rounded-cirle btn-danger" href="{{ path('app_cart_remove', {'id': item.product.id}) }}"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <h3 class="h4">Total : <span class="px-5 fw-bold text-success">{{ total }} Ar</span></h3>
                <div>
                    <button type="submit" class="btn btn-primary my-3 px-5 rounded-pill">Valider la commande</button> 
                </div>
            {% endif %}
        </div>
    </div>
</section>
{% endblock %}
