{% extends 'base_admin_blog.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>
    <div class="my-4">
        <a class="btn btn-sm rounded-pill px-5 btn-primary" href="{{ path('app_blog_post_new') }}">Create new</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Titre</th>
                <th class="text-center">Meta Title</th>
                <th class="text-center">Meta Desc</th>
                <th class="text-center">Mot clés</th>
                <th class="text-center">Créée le</th>
                <th class="text-center">ImageName</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td class="text-center">{{ post.metaTitle ? '<i class="bi bi-check2-square text-info"></i>' : '<i class="bi bi-exclamation-circle text-danger"></i>'}}</td>
                <td class="text-center">{{ post.metaDescription ? '<i class="bi bi-check2-square text-info"></i>' : '<i class="bi bi-exclamation-circle text-danger"></i>'}}</td>
                <td class="text-center">{{ post.metaKeywords ? '<i class="bi bi-check2-square text-info"></i>' : '<i class="bi bi-exclamation-circle text-danger"></i>'}}</td>
                <td class="text-center">{{ post.createdAt ? post.createdAt|date('d/m/Y H:i:s') : '' }}</td>
                <td class="text-center">
                    {% if post.imageName %}
                        <img src="{{ asset('images/blogs/' ~ post.imageName) }}" alt="{{ post.title }}" class="img-thumbnail" style="width: 200px;"/>
                    {% endif %}
                </td>
                <td class="text-center">
                    <a class="btn btn-sm rounded-circle btn-primary" href="{{ path('app_blog_post_show', {'id': post.id}) }}"><i class="bi bi-eye"></i></a>
                    <a class="btn btn-sm rounded-circle btn-secondary" href="{{ path('app_blog_post_edit', {'id': post.id}) }}"><i class="bi bi-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
