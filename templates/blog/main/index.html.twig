{% extends 'base_blog.html.twig' %}
{% block body %}
    <main id="blog-post">
        <div class="container mt-5">
            <h3 class="pb-4 mb-4 fst-italic border-bottom">
                From the Firehose
            </h3>
            {% for post in posts %}
            <div class="row g-5">
            
                <div class="col-md-4 p-4 d-flex justify-content-end">
                    {% if post.imageName %}
                        <img src="{{ asset('images/blogs/' ~ post.imageName) }}" alt="{{ post.title }}" class="img-thumbnail" />
                    {% endif %}
                </div>

                <div class="col-md-8">
                        
                    <article class="blog-post">
                        <h2 class="display-6 link-body-emphasis mb-1"><a href="{{ path('app_blog_view', {'slug': post.slug})}}">{{ post.title }}</a></h2>
                        <p class="blog-post-meta">{{ post.createdAt|date('M Y')}} by <a href="#">{{ post.author }}</a></p>
                        <div class="blog-content">
                            {{ post.metaDescription|raw }}
                        </div>
                    </article>
                </div>
            </div>
        {% endfor %}
        </div>
    </main>

{% endblock %}