<div class="section-content">
	<div class="jobs-grid-wrap">
		<div class="row">
            {% if prestations_boost|length > 0 %}
                {% for prestation in prestations_boost %}
                <div class="col-lg-6 col-md-6">
                    <div class="jobs-grid m-b30">
                        <div class="media">
                            <img src="{{ prestation.fileName ? asset('uploads/prestations/' ~ prestation.fileName) : asset('images/prestation.png') }}');" alt="prestation_{{ prestation.id }}">
                        </div>
                        <div class="jobs-category"><span class="bg-pro">PRO</span></div>
                        <div class="mid-content">
                            <a href="" class="job-title">
                                <h4>
                                {{ prestation.titre }}
                                </h4>
                            </a>
                            <p class="job-address">
                                RÃ©f: {{ generateprestationReference(prestation.id) }}
                                <small class="badge bg-info rounded-pill">{{ 'app_catalog_expert.certificated' }}</small>
                                <small class="card-text"><i class="mx-1 bi bi-trophy"></i> {{ 'app_catalog_expert.realised'|trans }}</small>
                            </p>
                            <div>
                                {% if prestation.openai is not null %}
                                {% set description_words = prestation.openai|striptags|split(' ') %}
                                {% else %}
                                {% set description_words = prestation.description|striptags|split(' ') %}
                                {% endif %}
                                {% if description_words|length > 12 %}
                                    {{ description_words|slice(0, 12)|join(' ') }}...
                                {% else %}
                                    {{ description_words|join(' ') }}
                                {% endif %}
                            </div>
                            <div>
                                <span class="">
                                    <small><i class="bi bi-eye"></i> {{ candidat.experiences|length}} vues</small>
                                </span>
                            </div>
                        </div>
                        <div class="right-content">
                            <div class="jobs-amount">{{ candidat.tarifCandidat }}</span></div>
                            {% if app.user %}
                                <a href="{{ path('app_v2_recruiter_view_profile', {'id': candidat.id}) }}" class="btn btn-primary">Contacter</a>
                            {% else %}
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#connectingModal" data-bs-href="{{ path('app_v2_recruiter_view_profile', {'id': candidat.id}) }}">Contacter</button>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
                {% if prestations_boost|length == 1 %}
                <div class="card mt-3 text-center">
                    <a href="{{ path('app_contact') }}">
                        <img class="img-fluid rounded" src="{{ asset('images/Ot-votrepubici-verticalbis.webp')}}">
                    </a>
                </div>
                {% if not app.user %}
                    <div class="card mt-3 text-center">
                        <a href="{{ path('app_contact') }}">
                            <img class="img-fluid rounded" src="{{ asset('images/Ot-votrepubici-verticalbis.webp')}}">
                        </a>
                    </div>
                {% endif %}
                {% endif %}

                {% if prestations_boost|length == 2 %}
                    {% if not app.user %}
                        <div class="card mt-3 text-center">
                            <a href="{{ path('app_contact') }}">
                                <img class="img-fluid rounded" src="{{ asset('images/Ot-votrepubici-verticalbis.webp')}}">
                            </a>
                        </div>
                    {% endif %}
                {% endif %}
            {% endif %}
		</div>
	</div>
</div>