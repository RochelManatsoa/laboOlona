<div class="section-content">
	<div class="jobs-grid-wrap">
		<div class="row">
            {% if candidates_boost|length > 0 %}
                {% for candidat in candidates_boost %}
                <div class="col-lg-6 col-md-6">
                    <div class="jobs-grid m-b30">
                        <div class="media">
                        <img class="img-fluid profile-img" style="border-radius: 10px; object-fit: cover;" src="{{ candidat.fileName ? asset('uploads/experts/' ~ candidat.fileName) : asset('uploads/experts/avatar-default.jpg') }}" alt="">
                        </div>
                        <div class="jobs-category"><span class="bg-pro">PRO</span></div>
                        <div class="mid-content">
                            <a href="" class="job-title">
                                <h4>
                                {% set title_words = candidat.titre|striptags|split(' ') %}
                                {% if title_words|length > 5 %}
                                    {{ title_words|slice(0, 5)|join(' ') }}...
                                {% else %}
                                    {{ title_words|join(' ') }}
                                {% endif %}
                                </h4>
                            </a>
                            <p class="job-address">
                                Ref: {{ generatePseudoById(candidat.id) }}
                                <small class="badge bg-info rounded-pill">Certifi√©</small>
                                <small class="card-text"><i class="mx-1 bi bi-trophy"></i> {{ candidat.experiences|length}} {{ 'app_catalog_expert.realised'|trans }}</small>
                            </p>
                            <div>
                                <span class="">
                                    <small><i class="bi bi-eye"></i> {{ candidat.vues|length}} vues</small>
                                </span>
                            </div>
                        </div>
                        <div class="right-content">
                            <div class="jobs-amount">{{ candidat.tarifCandidat }}</span></div>
                            {% if app.user %}
                                <a href="{{ path('app_v2_recruiter_view_profile', {'id': candidat.id}) }}" class="btn btn-primary">Contacter</a>
                            {% else %}
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#connectingModal" data-bs-href="{{ path('app_v2_recruiter_view_profile', {'id': candidat.id}) }}">Contacter</button>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
                {% if candidates_boost|length == 1 %}
                <div class="card mt-3 text-center">
                    <a href="{{ path('app_contact') }}">
                        <img class="img-fluid rounded" src="{{ asset('images/Ot-votrepubici-verticalbis.webp')}}">
                    </a>
                </div>
                {% if not app.user %}
                    <div class="card mt-3 text-center">
                        <a href="{{ path('app_contact') }}">
                            <img class="img-fluid rounded" src="{{ asset('images/Ot-votrepubici-verticalbis.webp')}}">
                        </a>
                    </div>
                {% endif %}
            {% endif %}

            {% if candidates_boost|length == 2 %}
                {% if not app.user %}
                    <div class="card mt-3 text-center">
                        <a href="{{ path('app_contact') }}">
                            <img class="img-fluid rounded" src="{{ asset('images/Ot-votrepubici-verticalbis.webp')}}">
                        </a>
                    </div>
                {% endif %}
            {% endif %}
            {% endif %}
		</div>
	</div>
</div>