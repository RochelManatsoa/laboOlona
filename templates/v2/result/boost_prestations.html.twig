<div class="container-fluid mt-5 d-block d-md-none">
    {% if prestations_boost|length > 0 %}
        <div id="carousel_expert_component_mobile_{{ from }}" class="carousel slide mb-5" data-bs-interval="5000" data-bs-ride="carousel">
            <div class="carousel-inner" role="listbox">
                {% for prestation in prestations_boost %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <div class="container-fluid">
                            <div class="row justify-content-center g-2">
                                <div class="col-12 col-md-3"> <!-- Width adjusted for better desktop view -->
                                    <div class="card position-relative text-center">
                                        <!-- Badge -->
                                        <span class="badge bg-danger rounded-pill position-absolute top-0 start-25 translate-middle mt-2 ms-3">PRO</span>
                                        <div class="card-image-wrapper">
                                            <div class="" style="height:180px; background-image: url('{{ prestation.fileName ? asset('uploads/prestations/' ~ prestation.fileName) : asset('images/prestation.png') }}'); background-position: center; background-size: cover; background-repeat: no-repeat;" alt="{{ prestation.id }}"></div>
                                            <p class="card-title h6 bg-dark text-white text-center py-2">{{ generateprestationReference(prestation.id) }}</p>
                                            <div class="card-body-candidat">
                                                <span class="fw-bold text-uppercase fs-7 small">{{ prestation.titre }}</span>
                                                <small class="mx-auto">
                                                    <small class="card-text"></small><br>
                                                    <small class="card-text"><i class="mx-1 bi bi-trophy"></i>{{ prestation.competences|length}} {{ 'app_catalog_expert.realised'|trans }}</small><br>
                                                    <small class="card-text"><i class="mx-1 bi bi-patch-check"></i> {{ 'app_catalog_expert.certificated'|trans }}</small>
                                                </small>
                                            </div>
                                            {% if app.user %}
                                                <a href="{{ path('app_v2_recruiter_view_profile', {'id': prestation.id}) }}" class="btn btn-primary btn-sm fw-semibold mb-3 px-3 mx-auto">Contacter</a>
                                            {% else %}
                                                <button type="button" class="btn btn-primary btn-sm fw-semibold mb-3 px-3 mx-auto" data-bs-toggle="modal" data-bs-target="#connectingModal" data-bs-href="{{ path('app_v2_recruiter_favorite_add_candidate', {'id': prestation.id}) }}">Contacter</button>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>

<div class="container-fluid mt-5 d-none d-md-block">
    {% if prestations_boost|length > 0 %}
        <div id="carousel_expert_component_{{ from }}" class="carousel slide mb-5" data-bs-interval="5000" data-bs-ride="carousel">
            <div class="carousel-inner" role="listbox">
                {% set totalPrestations = prestations_boost|length %}
                {% set fillCount = totalPrestations % 3 == 0 ? 0 : 3 - (totalPrestations % 3) %}
                {% set totalItems = totalPrestations + fillCount %}
                {% set pageCount = (totalItems + 2) // 3 %}
                {% set itemsPerSlide = 3 %}

                {% for i in 0..(pageCount - 1) %}
                    <div class="carousel-item {% if i == 0 %}active{% endif %}">
                        <div class="container-fluid">
                            <div class="row row-cols-1 row-cols-md-3 g-2">
                                {% for j in 0..itemsPerSlide - 1 %}
                                    {% set index = i * itemsPerSlide + j %}
                                    {% if index < totalPrestations %}
                                        {% set prestation = prestations_boost[index] %}
                                        <div class="col"> 
                                            <div class="card position-relative text-center">
                                                <!-- Badge -->
                                                <span class="badge bg-danger rounded-pill position-absolute top-0 start-25 translate-middle mt-2 ms-3">PRO</span>
                                                <div class="card-image-wrapper">
                                                    <div class="" style="height:180px; background-image: url('{{ prestation.fileName ? asset('uploads/prestations/' ~ prestation.fileName) : asset('images/prestation.png') }}'); background-position: center; background-size: cover; background-repeat: no-repeat;" alt="{{ prestation.id }}"></div>
                                                    <p class="card-title h6 bg-dark text-white text-center py-2">{{ generateprestationReference(prestation.id) }}</p>
                                                    <div class="card-body-candidat">
                                                        <span class="fw-bold text-uppercase fs-7 small">{{ prestation.titre }}</span>
                                                        <small class="mx-auto">
                                                            <small class="card-text"></small><br>
                                                            <small class="card-text"><i class="mx-1 bi bi-trophy"></i>{{ prestation.competences|length}} {{ 'app_catalog_expert.realised'|trans }}</small><br>
                                                            <small class="card-text"><i class="mx-1 bi bi-patch-check"></i> {{ 'app_catalog_expert.certificated'|trans }}</small>
                                                        </small>
                                                    </div>
                                                    {% if app.user %}
                                                        <a href="{{ path('app_v2_recruiter_view_profile', {'id': prestation.id}) }}" class="btn btn-primary btn-sm fw-semibold mb-3 px-3 mx-auto">Contacter</a>
                                                    {% else %}
                                                        <button type="button" class="btn btn-primary btn-sm fw-semibold mb-3 px-3 mx-auto" data-bs-toggle="modal" data-bs-target="#connectingModal" data-bs-href="{{ path('app_v2_recruiter_favorite_add_candidate', {'id': prestation.id}) }}">Contacter</button>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    {% else %}
                                        <div class="col">
                                            <div class="card position-relative text-center">
                                                <a href="{{ path('app_v2_contact') }}">
                                                    <img class="img-fluid" src="{{ asset('images/Ot-votrepubici-verticalbis.webp')}}">
                                                </a>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel_expert_component_{{ from }}" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="false"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel_expert_component_{{ from }}" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="false"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    {% endif %}
</div>

