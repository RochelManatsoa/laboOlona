<div class="container-fluid mt-5 d-block d-md-none">
    {% if joblistings_boost|length > 0 %}
        <div id="carousel_expert_component_mobile_{{ from }}" class="carousel slide mb-5" data-bs-interval="5000" data-bs-ride="carousel">
            <div class="carousel-inner" role="listbox">
                {% for joblisting in joblistings_boost %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <div class="container-fluid">
                            <div class="row justify-content-center g-2">
                                <div class="col-12 col-md-3"> <!-- Width adjusted for better desktop view -->
                                    
                                    <div class="card position-relative text-center">
                                        <!-- Badge -->
                                        <span class="badge bg-danger rounded-pill position-absolute top-0 start-0 translate-middle mt-2 ms-3">URGENT</span>
                                        <div class="card-image-wrapper">
                                            <div class="job-image" style="height:180px; background-image: url('{{ joblisting.entreprise.fileName ? asset('uploads/compagnies/' ~ joblisting.entreprise.fileName) : asset('images/annonce.png') }}'); background-position: center; background-size: cover; background-repeat: no-repeat;" alt="{{ generatePseudoById(joblisting.id) }}">
                                                <span class="job-title fw-bold text-uppercase fs-7 small">{{ joblisting.titre }}</span>
                                            </div>
                                            <p class="card-title h6 bg-dark text-white text-center py-2">{{ generateJobReference(joblisting.id) }}</p>
                                            <div class="card-body-candidat">
                                                <small class="mt-auto">
                                                    <small class="card-text"><i class="bi bi-eye"></i> {{ joblisting.annonceVues|length }} vues</small> |
                                                    <small class="card-text"><i class="mx-1 bi bi-patch-check"></i> {{ joblisting.applications|length }} offres</small>
                                                </small><br>
                                                <small class="">
                                                    <span class="badge bg-info">{{ joblisting.typeContrat }}</span><br>
                                                    Date limite : <br>{{ joblisting.dateExpiration|date('d/m/Y') }}<br>
                                                </small>
                                            </div>
                                            {% if app.user %}
                                                <a href="{{ path('app_v2_recruiter_view_profile', {'id': joblisting.id})}}" class="btn btn-primary btn-sm fw-semibold mb-3 px-3 mx-auto">Contacter</a>
                                            {% else %}
                                                <button type="button" class="btn btn-primary btn-sm fw-semibold mb-3 px-3 mx-auto" data-bs-toggle="modal" data-bs-target="#connectingModal" data-bs-href="{{ path('app_v2_recruiter_favorite_add_candidate', {'id':joblisting.id}) }}">Contacter</button>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>

<div class="container-fluid mt-5 d-none d-md-block">
    {% if joblistings_boost|length > 0 %}
        <div id="carousel_expert_component_{{from}}" class="carousel slide mb-5" data-bs-interval="5000" data-bs-ride="carousel">
            <div class="carousel-inner" role="listbox">
                {% set totalAnnonces = joblistings_boost|length %}
                {% set fillCount = totalAnnonces % 3 == 0 ? 0 : 3 - (totalAnnonces % 3) %}
                {% set totalItems = totalAnnonces + fillCount %}
                {% set pageCount = (totalItems + 2) // 3 %}
                {% set itemsPerSlide = 3 %}
                
                {% for i in 0..(pageCount - 1) %}
                    <div class="carousel-item {% if i == 0 %}active{% endif %}">
                        <div class="container-fluid">
                            <div class="row row-cols-1 row-cols-md-3 g-2">
                                {% for j in 0..itemsPerSlide - 1 %}
                                    {% set index = i * itemsPerSlide + j %}
                                    {% if index < totalAnnonces %}
                                        {% set joblisting = joblistings_boost[index] %}
                                        <div class="col">
                                            <div class="card position-relative text-center">
                                                <!-- Badge -->
                                                <span class="badge bg-danger rounded-pill position-absolute top-0 start-0 translate-middle mt-2 ms-3">URGENT</span>
                                                <div class="card-image-wrapper">
                                                    <div class="job-image" style="height:180px; background-image: url('{{ joblisting.entreprise.fileName ? asset('uploads/compagnies/' ~ joblisting.entreprise.fileName) : asset('images/annonce.png') }}'); background-position: center; background-size: cover; background-repeat: no-repeat;" alt="{{ generatePseudoById(joblisting.id) }}">
                                                        <span class="job-title fw-bold text-uppercase fs-7 small">{{ joblisting.titre }}</span>
                                                    </div>
                                                    <p class="card-title h6 bg-dark text-white text-center py-2">{{ generateJobReference(joblisting.id) }}</p>
                                                    <div class="card-body-candidat">
                                                        <small class="mt-auto">
                                                            <small class="card-text"><i class="bi bi-eye"></i> {{ joblisting.annonceVues|length }} vues</small> |
                                                            <small class="card-text"><i class="mx-1 bi bi-patch-check"></i> {{ joblisting.applications|length }} offres</small>
                                                        </small><br>
                                                        <small class="">
                                                            <span class="badge bg-info">{{ joblisting.typeContrat }}</span><br>
                                                            Date limite : <br>{{ joblisting.dateExpiration|date('d/m/Y') }}<br>
                                                        </small>
                                                    </div>
                                                    {% if app.user %}
                                                        <a href="{{ path('app_v2_recruiter_view_profile', {'id': joblisting.id})}}" class="btn btn-primary btn-sm fw-semibold mb-3 px-3 mx-auto">Contacter</a>
                                                    {% else %}
                                                        <button type="button" class="btn btn-primary btn-sm fw-semibold mb-3 px-3 mx-auto" data-bs-toggle="modal" data-bs-target="#connectingModal" data-bs-href="{{ path('app_v2_recruiter_favorite_add_candidate', {'id':joblisting.id}) }}">Contacter</button>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    {% else %}
                                        <div class="col">
                                            <div class="card position-relative text-center">
                                                <a href="{{ path('app_v2_contact') }}">
                                                    <img class="img-fluid" src="{{ asset('images/Ot-votrepubici-verticalbis.webp')}}">
                                                </a>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <!-- Controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel_expert_component_{{from}}" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel_expert_component_{{from}}" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    {% endif %}
</div>