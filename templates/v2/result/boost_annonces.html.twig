<div class="container-fluid mt-5">
    {% if joblistings_boost|length > 0 %}
        <div id="carousel_expert_component_{{from}}" class="carousel slide mb-5" data-bs-interval="false">
            <div class="carousel-inner">
                {% set itemsPerSlide = 3 %}
                {% set numSlides = (joblistings_boost|length / itemsPerSlide) | round(0, 'ceil') %}
                
                {% for i in 0..numSlides - 1 %}
                    <div class="carousel-item {% if i == 0 %}active{% endif %}">
                        <div class="container-fluid">
                            <div class="row row-cols-1 row-cols-md-3 g-2">
                                {% for j in 0..itemsPerSlide - 1 %}
                                    {% set index = i * itemsPerSlide + j %}
                                    {% if index < joblistings_boost|length %}
                                        {% set joblisting = joblistings_boost[index] %}
                                        <div class="col">
                                            <div class="card position-relative text-center">
                                                <!-- Badge -->
                                                <span class="badge bg-danger rounded-pill position-absolute top-0 start-0 translate-middle mt-2 ms-3">URGENT</span>
                                                <div class="" style="height:200px; background-image: url('{{ joblisting.entreprise.fileName ? asset('uploads/compagnies/' ~ joblisting.entreprise.fileName) : asset('images/annonce.png') }}'); background-position: center; background-size: cover; background-repeat: no-repeat;" alt="{{ generatePseudoById(joblisting.id) }}"></div>
                                                <p class="card-title h6 bg-dark text-white text-center py-2">{{ generateJobReference(joblisting.id) }}</p>
                                                <div class="card-body-candidat">
                                                    <span class="fw-bold text-uppercase">{{ joblisting.titre }}</span>
                                                    <small class="mx-auto">
                                                        <small class="card-text"></small><br>
                                                        <small class="card-text"><i class="mx-1 bi bi-trophy"></i>{{ joblisting.competences|length}} {{ 'app_catalog_expert.realised'|trans }}</small><br>
                                                        <small class="card-text"><i class="mx-1 bi bi-patch-check"></i> {{ 'app_catalog_expert.certificated'|trans }}</small>
                                                    </small>
                                                </div>
                                                {% if app.user %}
                                                    <a href="{{ path('app_v2_recruiter_view_profile', {'id': joblisting.id})}}" class="btn btn-primary btn-sm fw-semibold mb-3 px-3 mx-auto">Contacter</a>
                                                {% else %}
                                                    <button type="button" class="btn btn-primary btn-sm fw-semibold mb-3 px-3 mx-auto" data-bs-toggle="modal" data-bs-target="#connectingModal" data-bs-href="{{ path('app_v2_recruiter_favorite_add_candidate', {'id':joblisting.id}) }}">Contacter</button>
                                                {% endif %}
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <!-- Controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel_expert_component_{{from}}" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel_expert_component_{{from}}" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    {% endif %}
</div>