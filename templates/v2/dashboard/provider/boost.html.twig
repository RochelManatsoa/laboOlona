{% extends 'base_register.html.twig' %}

{% block title %}
	Booster votre profil Olona Talents
{% endblock %}

{% block meta %}
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}
<section class="login-wrap">
    <div class="bg-mask"></div>
    <div class="login-header">
        <div class="container pt-5">
            <div class="row">
                <div class="col-md-4">
                    <a href="{{ path('app_home') }}">
                        <img src="{{ asset('images/login_olona_talents.webp') }}" class="img-fluid" alt="Image">
                    </a>
                </div>
                {#<div class="col-md-8 ">
                    <div class="sign-up_">
                        Déjà membre ? <a href="{{ path('app_login') }}" class="fw-bolder">Connectez-vous</a> et profitez des avantages de Olona-talents.
                    </div>
                </div>#}
            </div>
        </div>
    </div>
	<div class="login-content">
		<div class="container">
			<div class="row">
				<div class="col-12 col-lg-8">
					<div class="register-left p-5">
						<div class="register-item">
							<h1 class="fs-2 text-center">
								Booster votre profil
							</h1>
							<hr class="my-4">
							<p class="text-center">
								Augmentez vos chances d'être vu et choisi par les recruteurs ! En boostant votre profil, vous vous assurez une visibilité accrue et une position de premier plan dans les résultats de recherche.
							</p>
							{{ form_start(form, {'attr':{'action': path('app_v2_dashboard_boost_profile', {'id':app.user.id}), 'id':'boostProfileForm'}})}}

							<div class="row row-cols-1 row-cols-md-3 my-4">


								{% for boost in form.boost %}

									<div class="col">
										<div class="custom-control custom-radio image-checkbox photo-gris">
											{{ form_widget(boost, {'attr': {'style': 'display:none'}}) }}
											<label class="custom-control-label" for="{{ boost.vars.id }}">
												<div class="card mb-4 rounded-3 shadow-sm">
													<div class="card-header py-3 bg-info text-dark text-center">
														<h2 class="my-0 fw-bolder fs-5" data-label="{{ getBoostInfo(boost.vars.id).credit }} crédits">{{ boost.vars.label }}</h2>
													</div>
													<div class="card-body">
														<h3 class="card-title pricing-card-title text-primary text-center">{{ getBoostInfo(boost.vars.id).credit }}<small class="fw-light">crédits</small>
														</h3>
														<ul class="list-unstyled small my-3">
															<li>
																<i class="bi bi-check h5 text-danger"></i>Badge Olona Talent</li>
															<li>
																<i class="bi bi-check h5 text-danger"></i>Optimisation de votre profil</li>
															<li>
																<i class="bi bi-check h5 text-danger"></i>Analyse avancée de votre CV par notre IA spécialisée dans le recrutement</li>
														</ul>
													</div>
												</div>
											</label>
										</div>
									</div>

								{% endfor %}

							</div>
							<p class="text-center mb-5">
								En choisissant l'un de ces boosts, vous multipliez vos opportunités de contact et renforcez votre présence auprès des principales entreprises de votre secteur. Ne laissez pas passer votre chance de vous démarquer !
							</p>
							<div id="dashboardButton" class="text-center">
								<button type="button" class="btn btn-primary" id="boostProfileButton" data-toast="true">
									Booster mon profil
									<i class="bi bi-rocket ms-2"></i>
								</button>
								<a href="{{ path('app_v2_dashboard')}}" class="btn btn-outline-primary ml-5 btn-primary">
									Continuer sans Boost
								</a>
							</div>
							{{ form_end(form) }}
						</div>
					</div>
				</div>
				<div class="col-12 col-lg-4">
					{% include "v2/dashboard/provider/_sticky_sidebar.html.twig" %}
				</div>
			</div>
		</div>
	</div>
</section>


{% endblock %}

{% block preview %}{% endblock %}
