{% if candidates_boost is defined %}
{% include "v2/result/boost_candidats.html.twig" %}
{% endif %}
<div class="card position-relative text-center d-none d-md-block">
    <a href="{{ path('app_v2_view_recruiter_profile', {'id': 113 }) }}">
        <img class="img-fluid" src="{{ asset('images/pubs/espace-pub-horizontal-regard-beauty-_1_.webp')}}">
    </a>
</div>

<div class="m-4 card position-relative text-center d-block d-md-none">
    <a href="{{ path('app_v2_view_recruiter_profile', {'id': 113 }) }}">
        <img class="img-fluid" src="{{ asset('images/pubs/espace-pub-carre-regard-beauty.webp')}}">
    </a>
</div>

{% for candidate in candidates %}
	<div class="card my-3 small px-3 px-sm-5 py-4">
        <div class="d-flex align-items-center">
            <div class="me-3">
                <div class="rounded-circle" style="
                    width: 45px;
                    height: 45px;
                    background-image: url('{{ candidate.fileName ? asset('uploads/experts/' ~ candidate.fileName) : asset('uploads/experts/avatar-default.jpg') }}');
                    background-size: cover;
                    background-position: center;
                ">
                </div>
            </div>
            <div class="flex-grow-1">
                <span class="fs-6">
                    {% if app.user %}
                        <a href="{{ path('app_v2_recruiter_view_profile', {'id': candidate.id })}}">
                            {{ candidate.titre }}
                        </a>
                    {% else %}
                        <span style="cursor:pointer;" class="candidate-link" data-id="{{ candidate.id }}">{{ candidate.titre }}</span>
                    {% endif %}
                </span><br>
                <span class="small fw-lighter">{{ generatePseudo(candidate) }}</span>
            </div>
        </div>
		<div class="mt-3">
			{{ candidate.metaDescription|raw }}
		</div>
        <p class="small fw-light">
            <span class="badge bg-info rounded-pill px-2">Certifié</span>
            <span class="small text-center mx-2">|</span>
            <i class="bi bi-hourglass-split"></i>
            Connecté
            {% if candidate.candidat.lastLogin is defined and candidate.candidat.lastLogin is not null %}
            {{ candidate.candidat.lastLogin|time_ago }}
            {% else %}
            {{ candidate.candidat.dateInscription|time_ago }}
            {% endif %}
            <span class="small text-center mx-2">|</span>
            <i class="bi bi-eye"></i>
            {{ candidate.vues|length }}
            vues
            <span class="small text-center mx-2">|</span>
            <i class="bi bi-bookmark-check"></i>
            {{ candidate.competences|length }}
            competences
        </p>
        <div class="d-flex ms-auto my-2 me-2">
			{% if app.user %}
                <a class="btn btn-sm btn-primary rounded-pill px-3 me-2" href="{{ path('app_v2_recruiter_view_profile', {'id': candidate.id })}}">Plus de details</a>
			{% else %}
                <div class="d-none d-md-block">
                    <button class="btn btn-sm btn-primary rounded-pill px-3 me-2 candidate-link" type="button" data-id="{{ candidate.id }}">Plus de details</button>
                </div>
                
                <div class="d-block d-md-none">
                    <button type="button" class="btn btn-outline-primary btn-sm rounded fw-semibold mb-3 px-3 mx-auto" data-bs-toggle="modal" data-bs-target="#connectingModal" data-bs-href="{{ path('app_v2_recruiter_view_profile', {'id':candidate.id}) }}">Plus de détails</button>
                </div>
			{% endif %}
            {% if app.user.entrepriseProfile is defined and app.user.entrepriseProfile is not null %}
                <div id="row_favorite_{{ candidate.id }}">
                {% if app.user.entrepriseProfile is defined %}
                    {% if isLikedByRecruiter(app.user.entrepriseProfile, candidate.id) %}
                        <button type="button" class="btn btn-primary btn-sm rounded-pill px-3 remove-from-favorites" data-href="{{ path('app_v2_recruiter_favorite_delete_candidate', {'id':candidate.id}) }}"><i class="bi bi-star-fill me-2"></i>Favori</button>
                    {% else %}
                        <button type="button" class="btn btn-outline-primary btn-sm rounded-pill px-3 add-to-favorites" data-href="{{ path('app_v2_recruiter_favorite_add_candidate', {'id':candidate.id}) }}"><i class="bi bi-star me-2"></i>Ajouter</button>
                    {% endif %}
                {% endif %}
                </div>
            {% endif %}
        </div>
		<div class="">
            <span class="position-absolute top-0 start-50 px-3 translate-middle badge bg-secondary-subtle border border-secondary-subtle text-secondary-emphasis rounded-pill">
                {% if app.user and app.user.entrepriseProfile is defined and app.user.entrepriseProfile is not null %}
                <i class="bi bi-tags"></i> {{ candidate.secteurs|getFirstCommonSecteur(app.user.entrepriseProfile.secteurs)}}
                {% else %}
                <i class="bi bi-tags"></i> 
                    {% if candidate.secteurs|length > 0 %}
                        {{ candidate.secteurs[0] }}
                    {% else %}
                        Non défini
                    {% endif %}
                {% endif %}
            </span>
		</div>
	</div>
	<span data-candidate="{{ candidate.id }}" style="display:none">
		{% include "v2/preview/_prev_candidates.html.twig" %}
	</span>
{% endfor %}