                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        </div>
                    </div>
                
                </div>
                <div class="row">
                {% for job_offer in next_three_offers %}
                    <div class="col-lg-4 col-md-6 mb-5">
                        <div class="featured-block">
                            <div class="inner-content">
                                <div class="mid-content">
                                    <span class="job-time">{{ job_offer.typeContrat.nom }}</span>
                                    <div class="company-logo">
                                    <img src="{{ job_offer.entreprise.fileName ? asset('uploads/compagnies/' ~ job_offer.entreprise.fileName) : asset('images/dashboard/logo_defaut_entreprise2.webp') }}" alt="logo company">
                                    </div>
                                    <div class="company-info">
                                        <a href="{{ path('app_v2_view_recruiter_profile', {'id' : job_offer.entreprise.id}) }}" class="company-name">{{ job_offer.entreprise.nom }}</a>
                                        <p class="company-secteur">{{ job_offer.entreprise.secteurs|length > 0 ? job_offer.entreprise.secteurs[0].nom : '-' }}</p>
                                    </div>
                                </div>
                                <div class="bottom-content">
                                    <h4 class="job-name-title">{{ job_offer.titre }}</h4>
                                    <span class="job-post-time">{{ job_offer.dateCreation|time_ago }}</span>
                                </div>
                                <div class="aply-btn-area">
                                    <a href="#" class="aplybtn btn-primary">
                                        <i class="bi bi-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
                <div class="btn-signUp">
                    <a href="" class="btn btn-primary">Afficher tous les recruteurs</a>
