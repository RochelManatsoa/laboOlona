                            <a href="{{ path('app_olona_talents_candidates', {'q':'Developpeur'})}}">Developpeur</a> ,
                            <a href="{{ path('app_olona_talents_candidates', {'q':'UI/UX designer'})}}">UI/UX designer</a> ,
                            <a href="{{ path('app_olona_talents_candidates', {'q':'Marketing'})}}">Marketing</a> ,
                            <a href="{{ path('app_olona_talents_candidates', {'q':'Ingenieur'})}}">Ingenieur</a> ...
                        </div>
                    </div>
                    <div class="bottom-section">
                        <div class="ot-cvth">+ De 10000 CVthèque</div>
                        <div class="blocks-wrap">
                            <!--icon-block-1-->
                            <div class="blocks blocks-position-1">
                                <div class="ot-content">
                                    <div class="count-number text-clr-pink">
                                        + <span class="counter">500</span>
                                    </div>
                                    <p class="icon-content-info">Entreprises</p>
                                </div>
                            </div>

