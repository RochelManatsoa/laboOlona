{% extends 'base_v21.html.twig' %}

{% block title %}Concours | Olona Talents{% endblock %}

{% block meta %}
<link rel="canonical" href="{{ app.request.schemeAndHttpHost ~ path('app_concours_etape_1') }}">
{% endblock %}



{% block body %}
<div class="container">
    <div class="row py-5">
        <div class="col-md-4 d-none d-lg-block">
            {% include "concours/side_nav.html.twig" with {'step': 3} %}
        </div>
        <div class="col-md-8">
            <section>
                <div class="annonce-item shadow p-3 p-sm-5 m-1 m-sm-4">
                    {% include "concours/nav_mobile.html.twig" %}
                    <div id="">                        
                        <div id="step_3" class="step-contest">
                            <h3>Étape 3 : Mes infos</h3>
                            {{ form_start(form) }}
                                <div class="pt-5">
                                    <div id="userInfo">
                                        {{ form_widget(form) }}
                                    </div>
                                </div>
                                <a href="{{ path('app_concours_etape_2') }}" class="btn btn-secondary">Précédent</a>
                                <button type="submit" class="btn btn-primary">Suivant</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>              
            </section>
        </div>
    </div>
</div>
{% endblock %}
