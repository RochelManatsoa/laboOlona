{% extends 'dashboard/base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h2>Expériences du Candidat</h2>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Entreprise</th>
                <th>Date de Début</th>
                <th>Date de Fin</th>
            </tr>
        </thead>
        <tbody>
            {% for experience in experiences %}
                <tr>
                    <td>{{ experience.id }}</td>
                    <td>{{ experience.titre }}</td>
                    <td>{{ experience.entreprise }}</td>
                    <td>{{ experience.dateDebut|date('Y-m-d') }}</td>
                    <td>{{ experience.dateFin|date('Y-m-d') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_dashboard_moderateur_candidats') }}" class="btn btn-secondary">Retour aux Candidats</a>
</div>
{% endblock %}
