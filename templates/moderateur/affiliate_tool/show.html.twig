{% extends 'dashboard/base.html.twig' %}

{% block title %}Outils {{ affiliate_tool.nom }}{% endblock %}

{% block body %}
    <h1>Outils {{ affiliate_tool.nom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ affiliate_tool.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ affiliate_tool.nom }}</td>
            </tr>
            <tr>
                <th>LienAffiliation</th>
                <td>{{ affiliate_tool.lienAffiliation }}</td>
            </tr>
            <tr>
                <th>Commission</th>
                <td>{{ affiliate_tool.commission }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ affiliate_tool.slug }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ affiliate_tool.type }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ affiliate_tool.image }}</td>
            </tr>
            <tr>
                <th>CustomId</th>
                <td>{{ affiliate_tool.customId }}</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ affiliate_tool.shortDescription|raw }}</td>
            </tr>
            <tr>
                <th>Slogan</th>
                <td>{{ affiliate_tool.slogan }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ affiliate_tool.prix }}</td>
            </tr>
            <tr>
                <th>CreeLe</th>
                <td>{{ affiliate_tool.creeLe ? affiliate_tool.creeLe|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EditeLe</th>
                <td>{{ affiliate_tool.editeLe ? affiliate_tool.editeLe|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ affiliate_tool.status }}</td>
            </tr>
            <tr>
                <th>Featured</th>
                <td>{{ affiliate_tool.featured ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>RelatedIds</th>
                <td>{{ affiliate_tool.relatedIds ? affiliate_tool.relatedIds|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>DescriptionEn</th>
                <td>{{ affiliate_tool.descriptionEn|raw }}</td>
            </tr>
            <tr>
                <th>DescriptionFr</th>
                <td>{{ affiliate_tool.descriptionFr|raw }}</td>
            </tr>
            <tr>
                <th>SloganFr</th>
                <td>{{ affiliate_tool.sloganFr }}</td>
            </tr>
            <tr>
                <th>ShortDescriptionFr</th>
                <td>{{ affiliate_tool.shortDescriptionFr|raw }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ affiliate_tool.imageName }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ affiliate_tool.updatedAt ? affiliate_tool.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_affiliate_tool_index') }}" class="btn btn-info px-3 rounded-pill">back to list</a>

    <a href="{{ path('app_affiliate_tool_edit', {'id': affiliate_tool.id}) }}" class="btn btn-warning px-3 rounded-pill">edit</a>

    {{ include('moderateur/affiliate_tool/_delete_form.html.twig') }}
{% endblock %}
