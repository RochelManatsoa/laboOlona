
{% extends 'dashboard/base.html.twig' %}

{% block body %}
<section class="p-0 m-0">
    <div class="container">
        <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center">
            <h1 class="h3">Graphique des logs utilisateurs</h1>

            <form action="{{ path('app_moderateur_activity_page_chart')}}" method="get">
                <select class="form-select" name="route" onchange="this.form.submit()" aria-label="Default select example">
                    {% for label, status in statuses %}
                        <option value="{{ status }}" {% if selectedStatus == status %}selected{% endif %}>{{ label }}</option>
                    {% endfor %}
                </select>
            </form>
            

            {% if chart %}
                <div style="margin-top: 30px;">
                    {{ render_chart(chart) }}
                </div>
            {% endif %}

            {% if logs|length > 0 %}
                <table class="table table-striped my-4">
                    <thead>
                        <tr>
                            <th scope="col">Url</th>
                            <th scope="col" class="text-center">Click</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for log in logs %}
                        <tr>
                            <td>{{ log.pageUrl }}</td>
                            <td class="text-center">{{ log.pageCount }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {{ knp_pagination_render(logs) }}
            {% endif %}
        </div>
    </div>
</section>
{% endblock %}