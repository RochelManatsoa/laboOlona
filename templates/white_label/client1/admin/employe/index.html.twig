{% extends 'white_label/client1/base.html.twig' %}

{% block title %}Tous les recruteurs{% endblock %}
{% block page_title %}Tous les recruteurs{% endblock %}


{% block body %}


<div class="container mt-4">
    <h1>Tous les coopteurs</h1>
    <div>
        <a class="btn btn-primary my-3 px-5 rounded-pill" href="{{ path('app_white_label_employe_profile_new') }}"><i class="bi me-2 bi-plus-lg"></i>Ajouter</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(employes, 'ID', 'r.id') }}</th>
                <th>{{ knp_pagination_sortable(employes, 'Nom et prénom(s)', 'nom') }}</th>
                <th class="text-center">{{ knp_pagination_sortable(employes, 'Cooptations', 'refCount') }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for item in employes %}
        {% set employe = item[0] %}
        {% set user = employe.referrer %}
            <tr>
                <td>{{ employe.id }}</td>
                <td>{{ user }}</td>
                <td class="text-center"><a href="{{ path('app_white_label_employe_profile_index', {'ref': employe.customId}) }}">{{ employe.referrals|length }}</a></td>
                <td>
                    <a class="btn btn-sm rounded-cirle btn-info" href="{{ path('app_white_label_employe_profile_show', {'id': employe.id}) }}"><i class="bi bi-eye"></i></a>
                    <a class="btn btn-sm rounded-cirle btn-danger" href="{{ path('app_white_label_employe_profile_edit', {'id': employe.id}) }}"><i class="bi bi-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Aucun employé trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(employes) }}
</div>

{% endblock %}
