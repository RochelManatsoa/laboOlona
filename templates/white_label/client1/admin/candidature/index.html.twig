{% extends 'white_label/client1/base.html.twig' %}

{% block title %}Tous les candidatures{% endblock %}
{% block page_title %}Tous les candidatures{% endblock %}


{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; }
</style>

<div class="example-wrapper">
    <h1>Tous les candidatures</h1>
    <div>
        <a class="btn btn-primary my-3 px-5 rounded-pill" href="{{ path('app_white_label_application_new') }}"><i class="bi me-2 bi-plus-lg"></i>Ajouter</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(applications, 'ID', 'a.id') }}</th>
                <th>{{ knp_pagination_sortable(applications, 'Annonce', 'j.titre') }}</th>
                <th>{{ knp_pagination_sortable(applications, 'Annonceur', 'e.nom') }}</th>
                <th>{{ knp_pagination_sortable(applications, 'Date', 'a.dateCandidature') }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for item in applications %}
        {% set application = item[0] %}
        {% set joblisting = item[1] %}
        {% set entreprise = item[2] %}
            <tr>
                <td>{{ application.id }}</td>
                <td>{{ joblisting.titre }}</td>
                <td>{{ entreprise.nom }}</td>
                <td>{{ application.dateCandidature ? application.dateCandidature|date('d/m/Y') : '' }}</td>
                <td>
                    <a class="btn btn-sm rounded-cirle btn-info" href="{{ path('app_white_label_application_show', {'id': application.id}) }}"><i class="bi bi-eye"></i></a>
                    <a class="btn btn-sm rounded-cirle btn-danger" href="{{ path('app_white_label_application_edit', {'id': application.id}) }}"><i class="bi bi-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Aucune candidature trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(applications) }}
</div>

{% endblock %}
