{% extends 'white_label/client1/base.html.twig' %}

{% block title %}Annonce {{ job_listing.id }}{% endblock %}

{% block body %}
    <h1>Annonce {{ job_listing.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job_listing.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ job_listing.titre }}</td>
            </tr>
            <tr>
                <th>Créée le</th>
                <td>{{ job_listing.dateCreation ? job_listing.dateCreation|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Expire le</th>
                <td>{{ job_listing.dateExpiration ? job_listing.dateExpiration|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ job_listing.status }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ job_listing.lieu }}</td>
            </tr>
            <tr>
                <th>JobId</th>
                <td>{{ job_listing.jobId }}</td>
            </tr>
            <tr>
                <th>NombrePoste</th>
                <td>{{ job_listing.nombrePoste }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ job_listing.description|raw }}</td>
            </tr>
            <tr>
                <th>Meta description</th>
                <td>{{ job_listing.shortDescription|raw }}</td>
            </tr>
            <tr>
                <th>Meta description générée?</th>
                <td>{{ job_listing.isGenerated ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Notification envoyée ?</th>
                <td>{{ job_listing.isNotified ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>
            <div class="d-flex justify-content-end w-100">
                <a class="btn btn-secondary px-5 rounded-pill" href="{{ path('app_white_label_job_listing_edit', {'id': job_listing.id}) }}"><i class="bi me-2 bi-pencil"></i>Modifier</a>
                {{ include('white_label/client1/admin/job_listing/_delete_form.html.twig') }}
            </div>

{% endblock %}
