{% extends 'white_label/client1/base.html.twig' %}

{% block title %}Toutes les candidatures{% endblock %}
{% block page_title %}Toutes les candidatures{% endblock %}


{% block body %}
    <h1>Liste des candidatures</h1>
    {% if applications|length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(applications, 'Date', 'a.dateCandidature') }}</th>
                    <th>{{ knp_pagination_sortable(applications, 'Annonce', 'j.titre') }}</th>
                    <th>{{ knp_pagination_sortable(applications, 'Candidat', 'c.titre') }}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for application in applications %}
                <tr>
                    <td>{{ application.dateCandidature ? application.dateCandidature|date('d/m/Y') : '' }}</td>
                    <td>{{ application.annonce.titre }}</td>
                    <td>
                        <a href="{{ path('app_white_label_client1_recruiter_view_profile', {'id': application.candidat.id}) }}">
                            {{ application.candidat.candidat }} | 
                            <span class="ms-1 text-muted">{{ application.candidat.titre }}</span>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" href="{{ path('app_white_label_client1_recruiter_view_profile', {'id': application.candidat.id}) }}">Voir le profil</a>
                        <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_white_label_client1_recruiter_candidature_view', {'id': application.id}) }}">Voir la candidature</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune candidature trouv√©e</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ knp_pagination_render(applications) }}
    {% else %}
        <div class="text-center col-lg-6 col-sm-12 mx-auto">
            <img src="{{ asset('images/empty.png')}}" class="img-fluid">
            <p class="text-center">Vous n'avez pas encore de candidature.</p>
        </div>
    {% endif %}
{% endblock %}
