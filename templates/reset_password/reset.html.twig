{% extends 'security/base_login.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block meta %}
<meta name="description" content="Réinitialisez votre mot de passe sur https://olona-talents.com/ en toute sécurité. Suivez les étapes pour récupérer l'accès à votre compte rapidement et facilement.">
<meta name="keywords" content="freelance, projet, offre, portage salarial, cooptation, recrutement, travail, emploi, talents, candidat, recruteur, offres, agence, olona, olona talents, olona talents agence, talents agence, agence talents, candidature, candidature agence, candidature olona, candidature olona talents">
<meta property="og:title" content="Réinitialiser mot de passe | Olona Talents">
<meta property="og:description" content="Réinitialisez votre mot de passe sur https://olona-talents.com/ en toute sécurité. Suivez les étapes pour récupérer l'accès à votre compte rapidement et facilement.">
<meta property="og:url" content="{{ app.request.uri }}">
<meta property="og:image" content="{{ app.request.schemeAndHttpHost ~ asset('/images/logo-og.png') }}">
<meta property="og:image:width" content="1200"/>
<meta property="og:image:height" content="630"/>
<link rel="canonical" href="{{ app.request.schemeAndHttpHost ~ path('app_forgot_password_request') }}">
{% endblock %}

{% block body %}
<section class="login-wrap">
    <div class="bg-mask"></div>
    <div class="login-header">
        <div class="container pt-5">
            <div class="row">
                <div class="col-md-4">
                    <a href="{{ path('app_home') }}">
                        <img src="{{ asset('images/logo-olona-talents-white600x200.png') }}" class="img-fluid" alt="Image">
                    </a>
                </div>
                <div class="col-md-8">
                    <div class="sign-up_">
                        Pas encore membre ? <a class="text-white" href="{{ path('app_olona_talents_register') }}" class="fw-bolder">Inscrivez-vous</a> et rejoignez la communauté Olona-talents.
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-content">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7 col-xl-8">
                    <div class="login-left-block">
                        
                        <h1>Le <span>1<sup>er</sup></span>moteur de recherche dédié à l'emploi à Madagascar</h1>
                        <ul class="features_list_">
                            <li><a class="text-white" href="{{ path('app_coworking_main')}}">Espace coworking</a></li>
                            <li><a class="text-white" href="" class="link-disabled">Recrutement</a></li>
                            <li><a class="text-white" href="{{ path('app_home_simulateur_portage')}}">Portage salarial</a></li>
                            <li><a class="text-white" href="" class="link-disabled">Domiciliation</a></li>
                            <li><a class="text-white" href="" class="link-disabled">AutoPromotion</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-5 col-xl-4">
                    <div class="card shadow-lg border-0 rounded">
                        <div class="card-body p-4">
                            <div class="text-center">
                                <h2 class="fs-4 fw-bolder">Réinitialisation de votre mot de passe</h2>
                                <p>
                                    Entrez votre nouveau mot de passe ci-dessous. Assurez-vous qu'il est sécurisé et unique pour ce site.
                                </p>
                            </div>
                            </br>
                            {{ form_start(resetForm, {'attr': {'class': 'col-md-10 mx-auto', 'data-turbo':'false'}}) }}
                                <!-- Premier champ password -->
                                <div class="form-floating mb-3 position-relative" data-controller="toggle-password">
                                    {{ form_widget(resetForm.plainPassword.first, {
                                        'attr': {
                                            'class': 'form-control',
                                            'data-toggle-password-target': 'input',
                                            'autocomplete': 'new-password',
                                            'style': 'padding-right: 4.5rem;' 
                                        }
                                    }) }}
                                    {{ form_label(resetForm.plainPassword.first) }}
                                    
                                    <!-- Conteneur des icônes -->
                                    <div class="position-absolute end-0 top-0 h-100 d-flex align-items-center pe-3">
                                        <!-- Toggle password -->
                                        <button type="button"
                                                class="btn btn-link p-0 me-2"
                                                data-action="click->toggle-password#toggle"
                                                data-toggle-password-target="icon">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    
                                    {{ form_errors(resetForm.plainPassword.first) }}
                                </div>

                                <!-- Second champ password -->
                                <div class="form-floating mb-3 position-relative" data-controller="toggle-password">
                                    {{ form_widget(resetForm.plainPassword.second, {
                                        'attr': {
                                            'class': 'form-control pe-5',
                                            'data-toggle-password-target': 'input',
                                            'autocomplete': 'new-password'
                                        }
                                    }) }}
                                    {{ form_label(resetForm.plainPassword.second) }}
                                    <button type="button"
                                            class="btn btn-link position-absolute end-0 top-50 translate-middle-y p-0 me-3"
                                            data-action="click->toggle-password#toggle"
                                            data-toggle-password-target="icon">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>

                                <button class="btn btn-primary px-5 btn-lg text-uppercase fw-bold my-4">
                                    Réinitialiser
                                </button>
                            {{ form_end(resetForm) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block preview %}{% endblock %}

