{% extends 'security/base_login.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block meta %}
<meta name="description" content="Réinitialisez votre mot de passe sur https://olona-talents.com/ en toute sécurité. Suivez les étapes pour récupérer l'accès à votre compte rapidement et facilement.">
<meta name="keywords" content="freelance, projet, offre, portage salarial, cooptation, recrutement, travail, emploi, talents, candidat, recruteur, offres, agence, olona, olona talents, olona talents agence, talents agence, agence talents, candidature, candidature agence, candidature olona, candidature olona talents">
<meta property="og:title" content="Réinitialiser mot de passe | Olona Talents">
<meta property="og:description" content="Réinitialisez votre mot de passe sur https://olona-talents.com/ en toute sécurité. Suivez les étapes pour récupérer l'accès à votre compte rapidement et facilement.">
<meta property="og:url" content="{{ app.request.uri }}">
<meta property="og:image" content="{{ app.request.schemeAndHttpHost ~ asset('/images/logo-og.png') }}">
<meta property="og:image:width" content="1200"/>
<meta property="og:image:height" content="630"/>
{% endblock %}

{% block body %}
<section class="login-wrap">
    <div class="bg-mask"></div>
    <div class="login-header">
        <div class="container pt-5">
            <div class="row">
                <div class="col-md-4">
                    <a href="{{ path('app_home') }}">
                        <img src="{{ asset('images/login_olona_talents.webp') }}" class="img-fluid" alt="Image">
                    </a>
                </div>
                <div class="col-md-8">
                    <div class="sign-up_">
                        Pas encore membre ? <a href="{{ path('app_olona_talents_register') }}" class="fw-bolder">Inscrivez-vous</a> et rejoignez la communauté Olona-talents.
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-content">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7 col-xl-8">
                    <div class="login-left-block">
                        
                        <h1>Le <span>1<sup>er</sup></span>moteur de recherche dédié à l'emploi à Madagascar</h1>
                        <ul class="features_list_">
                            <li><a href="{{ path('app_coworking_main')}}">Espace coworking</a></li>
                            <li><a href="" class="link-disabled">Recrutement</a></li>
                            <li><a href="{{ path('app_home_simulateur_portage')}}">Portage salarial</a></li>
                            <li><a href="" class="link-disabled">Domiciliation</a></li>
                            <li><a href="" class="link-disabled">AutoPromotion</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-5 col-xl-4">
                    <div class="card shadow-lg border-0 rounded">
                        <div class="card-body p-4">
                            <div class="text-center">
                                <h2 class="fs-4 fw-bolder">Réinitialisation de votre mot de passe</h2>
                                <p>
                                    Saisissez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                                </p>
                            </div>
                            </br>
                            {{ form_start(requestForm) }}
                                <div class="form-floating mb-3">
                                    {{ form_widget(requestForm.email, {'attr': {'placeholder': 'email@olona-talents.com'}}) }}
                                    {{ form_label(requestForm.email) }}
                                </div>
                                <div>
                                </div>
                            <button class="btn btn-login">Générer un mot de passe</button>
                            {{ form_end(requestForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block preview %}{% endblock %}
